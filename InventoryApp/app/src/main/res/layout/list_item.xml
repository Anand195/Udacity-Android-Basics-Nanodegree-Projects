<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="Name" />

        <TextView
            android:id="@+id/name_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="Price" />

        <TextView
            android:id="@+id/price_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2.1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="Current Quantity" />

        <TextView
            android:id="@+id/current_quantity_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="Sale Quantity" />

        <TextView
            android:id="@+id/sale_quantity_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23" />
    </LinearLayout>
</LinearLayout>